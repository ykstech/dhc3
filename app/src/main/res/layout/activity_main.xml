<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital Health Card (DHC)"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:id="@+id/header"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:id="@+id/userimage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Yash kumar sugandhi"
        android:layout_below="@+id/userimage"
        android:layout_centerHorizontal="true"
        android:id="@+id/username"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="DHC number:"
        android:layout_below="@+id/username"
        android:id="@+id/dhcnh"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="12345678912"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@+id/dhcnh"
        android:layout_marginLeft="10dp"
        android:id="@+id/dhcn"

        android:layout_marginTop="20dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="year of birth:"
        android:layout_below="@+id/dhcnh"
        android:id="@+id/yobh"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="27 apr 2002"
        android:layout_below="@+id/dhcnh"
        android:layout_toRightOf="@+id/yobh"
        android:layout_marginLeft="10dp"
        android:id="@+id/yob"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="gender:"
        android:layout_below="@+id/yobh"
        android:id="@+id/genderh"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="12345678912:"
        android:layout_below="@+id/yobh"
        android:layout_toRightOf="@+id/genderh"
        android:layout_marginLeft="10dp"
        />









</RelativeLayout>